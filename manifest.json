{
    "manifest_version": 3,
    "name": "AskLynk - AI-Powered Classroom Assistant",
    "version": "1.0.0",
    "description": "Transform your classroom with AI-powered anonymous questions, smart transcription, and context-aware assistance for Google Meet, Canvas, and other learning platforms.",
    "permissions": [
      "storage",
      "activeTab",
      "identity",
      "tabs",
      "cookies"
    ],
    "host_permissions": [
      "https://asklynk.vercel.app/*",
      "https://asklynk-backend-424701115132.us-central1.run.app/*",
      "https://*.asklynk.com/*",
      "http://localhost:3000/*",
      "http://localhost:5173/*"
    ],
    "externally_connectable": {
      "matches": [
        "https://asklynk.vercel.app/*",
        "https://asklynk-backend-424701115132.us-central1.run.app/*",
        "https://*.asklynk.com/*",
        "http://localhost:5173/*"
      ]
    },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://meet.google.com/*", "https://*.instructure.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icon/icon16.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }
